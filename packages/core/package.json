{
  "name": "@airium/core",
  "version": "0.2509.14",
  "description": "Core backend module using Amplify Gen 2",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:amplify": "ampx generate outputs --app-id local",
    "build:lambdas": "node scripts/build-lambdas.js",
    "dev": "tsc --watch",
    "deploy": "npm run build && npx ampx deploy",
    "deploy:prod": "npm run build && npx ampx deploy --branch main",
    "deploy:staging": "npm run build && npx ampx deploy --branch staging",
    "deploy:monitoring": "npx cdk deploy AiriumMonitoringStack --require-approval never",
    "deploy:backup": "npx cdk deploy AiriumBackupStack --require-approval never",
    "deploy:domain": "npx cdk deploy AiriumDomainStack --require-approval never",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "test:auth": "jest --testPathPattern=auth",
    "test:auth:watch": "jest --testPathPattern=auth --watch",
    "lint": "echo 'Linting disabled - TypeScript compilation provides type checking'",
    "clean": "rm -rf dist .amplify/artifacts amplify_outputs.json"
  },
  "dependencies": {
    "@aws-amplify/backend": "1.16.1",
    "@aws-amplify/backend-cli": "1.8.0",
    "aws-cdk-lib": "2.214.0",
    "constructs": "10.4.2",
    "@aws-sdk/client-dynamodb": "3.888.0",
    "@aws-sdk/lib-dynamodb": "3.888.0",
    "@aws-sdk/client-apigatewaymanagementapi": "3.888.0",
    "@aws-sdk/client-bedrock-runtime": "3.888.0",
    "@aws-sdk/client-appsync": "3.888.0",
    "@aws-sdk/client-cognito-identity-provider": "3.888.0",
    "@aws-sdk/client-s3": "3.888.0",
    "@aws-sdk/s3-request-presigner": "3.888.0",
    "@aws-sdk/util-dynamodb": "3.888.0",
    "uuid": "13.0.0",
    "@airium/shared": "*"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.152",
    "@types/jest": "30.0.0",
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "babel-jest": "30.1.2",
    "jest": "30.1.3",
    "ts-jest": "29.4.1",
    "vitest": "3.2.4",
    "typescript": "5.9.2",
    "@types/uuid": "10.0.0"
  }
}