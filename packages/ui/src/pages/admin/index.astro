---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { AdminDashboard } from '../../components/admin/AdminDashboard';
---

<AdminLayout title="AIrium - Admin Dashboard">
  <div class="space-y-6">
    <div>
      <h1 class="text-3xl font-bold tracking-tight">Admin Dashboard</h1>
      <p class="text-muted-foreground">
        Manage users, groups, applications, and system settings
      </p>
    </div>

    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <p class="text-blue-800 text-sm">
        <strong>Note:</strong> This page would normally require admin authentication. 
        In a production environment, access would be controlled by the AuthWrapper component.
      </p>
    </div>

    <AdminDashboard client:load />
  </div>
</AdminLayout>

<style>
  @import '../../styles/globals.css';
</style>