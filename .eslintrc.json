{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prefer-const": "error",
    "no-var": "error",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": [
    "dist/",
    "build/",
    "node_modules/",
    ".amplify/",
    "amplify_outputs.json"
  ]
}